{
    "name"        : "base",
    "version"     : "0.1.0",
    "private"     : true,
    "description" : "A base state for a babel JS app",

    "scripts": {
        "_test" : "mocha -r babel-register -G $(find $MOCHA_FOLDER -name '*.spec.js' -not -path '*/node_modules/*')",
        "test"  : "npm run _test -- -w",
        "cover" : "nyc npm run _test"
    },

    "engines": { "node": ">= 5.x.x" },

    "dependencies": {
        "bluebird"  : "~3.3.0",
        "lutils"    : "^1.0.0"
    },

    "devDependencies": {
        "babel-loader"                                        : "~6.2.0",
        "babel-core"                                          : "~6.6.0",
        "babel-register"                                      : "~6.6.0",
        "babel-preset-es2015"                                 : "^6.0.0",
        "babel-preset-es2015-node5"                           : "^1.0.0",
        "babel-plugin-transform-async-to-module-method"       : "latest",
        "babel-plugin-transform-class-properties"             : "latest",
        "babel-plugin-transform-object-rest-spread"           : "latest",
        "babel-plugin-transform-inline-environment-variables" : "latest",
        "babel-plugin-add-module-exports"                     : "~0.1.0",

        "eslint"        : "~2.7.0",
        "babel-eslint"  : "~6.0.2",

        "nyc"   : "~6.2.1",
        "mocha" : "~2.4.5",
        "chai"  : "~3.5.0"
    }
}
